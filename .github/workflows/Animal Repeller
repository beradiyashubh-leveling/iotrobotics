// Animal Repeller using Ultrasonic Sensor 
#define trigPin 9 
#define echoPin 10 
#define buzzer 8 
#define led 7 
long duration; 
int distance; 
void setup() { 
pinMode(trigPin, OUTPUT); 
pinMode(echoPin, INPUT); 
pinMode(buzzer, OUTPUT); 
pinMode(led, OUTPUT); 
 
  Serial.begin(9600); 
} 
 
void loop() { 
  // Send ultrasonic pulse 
  digitalWrite(trigPin, LOW); 
  delayMicroseconds(2); 
  digitalWrite(trigPin, HIGH); 
  delayMicroseconds(10); 
  digitalWrite(trigPin, LOW); 
 
  // Read echo time 
  duration = pulseIn(echoPin, HIGH); 
 
  // Calculate distance 
  distance = duration * 0.034 / 2; 
 
  Serial.print("Distance: "); 
  Serial.print(distance); 
  Serial.println(" cm"); 
 
  // If object/animal is near 
  if (distance > 0 && distance < 50) {   // range can be changed 
    digitalWrite(buzzer, HIGH); 
    digitalWrite(led, HIGH); 
  } else { 
    digitalWrite(buzzer, LOW); 
    digitalWrite(led, LOW); 
  } 
 
  delay(300); 
} 
 
