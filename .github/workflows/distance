#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);  // Adjust address if needed (scan via I2C scanner)

#define trigPin 9
#define echoPin 10

void setup() {
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print("Distance Meter");
  lcd.setCursor(0, 1);
  lcd.print("Ready...");
  delay(2000);
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Distance: ");
}

void loop() {
  long duration;
  float distanceCm;

  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  duration = pulseIn(echoPin, HIGH);
  distanceCm = (duration * 0.0343) / 2;  // Accurate cm formula (speed of sound 343 m/s)

  // Clear previous value
  lcd.setCursor(10, 0);
  lcd.print("     ");
  lcd.setCursor(10, 0);
  lcd.print(distanceCm, 1);
  lcd.print(" cm");

  lcd.setCursor(0, 1);
  lcd.print("Duration: ");
  lcd.print(duration);
  lcd.print(" us ");

  delay(300);  // Refresh rate
}
